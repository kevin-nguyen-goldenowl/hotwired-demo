<div class="w-[100vw] h-[100vh] bg-white flex items-center justify-center">
  <div class="wraper w-[500px] border rounded-xl p-3">
    <h2 class="my-2 text-blue-500 text-2xl font-bold text-center">
      <%=t('login_page.log_in')%>
    </h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages" , resource: resource %>

        <div class="field mt-2">
          <%= f.label :email, t('login_page.email') %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" ,
              class: 'w-full border rounded-md mt-2 p-2' %>
        </div>

        <div class="field mt-2">
          <%= f.label :password, t('login_page.password') %>
            <% if @minimum_password_length %>
              <em>(<%= t('login_page.minimum_characters', min: @minimum_password_length)%>)</em>
              <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password" ,
                  class: 'w-full border rounded-md mt-2 p-2' %>
        </div>

        <div class="field mt-2">
          <%= f.label :password_confirmation, t('login_page.password_confirmation') %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" ,
              class: 'w-full border rounded-md mt-2 p-2' %>
        </div>

        <div class="actions">
          <%= f.submit t('login_page.sign_up'), class: 'mt-3 mb-2 px-2 text-white bg-blue-500 rounded-md cursor-pointer'
            %>
        </div>
        <% end %>

          <%= render "users/shared/links" %>
  </div>
</div>
